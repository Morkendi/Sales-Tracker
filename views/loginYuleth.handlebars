<main class="form-signin w-100 m-auto">
        <form>

          <h1 class="h3 mb-3 fw-normal">Sign in</h1>
      
          <div class="form-floating">
            <input
              type="email"
              class="form-control"
              id="floatingInput"
              placeholder="name@example.com"
            />
